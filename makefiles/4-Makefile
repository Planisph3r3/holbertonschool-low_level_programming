CC = gcc
SRC = $(shell find ./ -name \*.c)
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) $(wildcard *~) $(NAME)

oclean:
	$(RM) $(wildcard *.o)

fclean: clean $(wildcard *.o)

re: fclean all
